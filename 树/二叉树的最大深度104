解法一
int maxDepth(struct TreeNode* root) {
    if(root == NULL)return 0;
    int len_left = maxDepth(root->left);
    int len_right = maxDepth(root->right);
    return (len_left > len_right ? len_left:len_right)+1;
    }

解法二
#define MAX(a, b) ((b) > (a) ? (b) : (a))

void dfs(struct TreeNode* node, int depth, int* ans) {
    if (node == NULL) {//空节点直接返回（递归终止条件）
        return;
    }
    depth++;//进入当前节点后，深度 +1
    *ans = MAX(*ans, depth);//更新全局最大深度 ans
    dfs(node->left, depth, ans);
    dfs(node->right, depth, ans);//递归遍历左右子树，传入当前深度
}

int maxDepth(struct TreeNode* root) {
    int ans = 0;
    dfs(root, 0, &ans);
    return ans;
}
